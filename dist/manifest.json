{
  "manifest_version": 3,
  "name": "Get Coursera Shareable Link",
  "description": "Extension to get shareable link in coursera",
  "version": "1.0",
  "content_scripts": [
    {
      "run_at": "document_end",
      "js": ["index.js"],
      "css": ["index.css"],
      "matches": ["https://www.coursera.org/learn/*"]
    }
  ],
  "action": {
    "default_icon": "favicon-v2-194x194.png"
  },
  "icons": {
    "16": "favicon-v2-194x194.png",
    "32": "favicon-v2-194x194.png",
    "48": "favicon-v2-194x194.png",
    "128": "favicon-v2-194x194.png"
  }
}
